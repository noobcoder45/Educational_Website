<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <title></title>
  </head>
  <body>
    <div class="row">
      <div class="col-2 subject_list">
        <ul class="list-group">
            <li class="list-group-item">Mathematics</li>
          <li class="list-group-item">physics</li>
          <li class="list-group-item">chemistry</li>
        </ul>
      </div>
      <div class="col maths">
        <h1><%= Subject %></h1>
        <hr>
        <% if(admin){ %>
          <% var path="/admin/material/" %>
        <% } else{ %>
          <% var path="/maths/" %>
        <% } %>
    <% for(let j=1;j<chapters.length;j++){ %>
    <% j--; %>
    <div class="row">
    <% for(let i=0;i<4;i++){ %>
      <% if(j<chapters.length){ %>
      <div class="card ml-auto mr-auto col">
        <div class="card-body">
            <form action=<%= path+chapters[j]+"/"+id %> method="post">
              <button type="submit" class="Chapter_go btn btn-primary stretched-link"><%= chapters[j] %></button>
            </form>
        </div>
      </div>
      <% j++; %>
    <% } %>
    <% } %>
  </div>
  <% } %>

  </div>
</div>
</div>
</div>
  </body>
</html>
