<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="./Student_Home.css">
    <title>Student_Home</title>
  </head>
  <body>
    <!--Heading,logo,account-->

    <!--Notifications-->
    <h1>Hello! <%= name %></h1>
    <form action=<%= "/schedule/"+ id %> method="post">
     <button type="submit" class="Schedule_go btn btn-primary stretched-link">Schedule</button>
   </form>
   <form action=<%= "/discussions/"+id %> method="post">
    <button type="submit" class="Schedule_go btn btn-primary stretched-link">Discussion</button>
  </form>

    <!--subjects-->
    <div class="subjects row">
      <!--Maths-->
      <div class="card ml-auto mr-auto">
        <img class="card-img-top" src="./images/maths.jpg" alt="">
        <div class="card-body">
          <form action=<%="/maths/"+id %> method="post">
            <button type="submit" class="subject_go btn btn-primary stretched-link">Mathematics</button>
          </form>
        </div>
      </div>
      <!--Physics-->
      <div class="card ml-auto mr-auto">
        <img class="card-img-top" src="images/physics.jpg" alt="">
        <div class="card-body">
          <form action="/Physics" method="post">
            <button type="submit" class="subject_go btn btn-primary stretched-link">Physics</button>
          </form>
        </div>
      </div>
      <!--Chemistry-->
      <div class="card ml-auto mr-auto">
          <img class="card-img-top" src="images/chemistry.jpg" alt="">
           <div class="card-body">
             <form action="/Chemistry" method="post">
               <button type="submit" class="subject_go btn btn-primary stretched-link">Chemistry</button>
             </form>

        </div>
      </div>
    </div>

    <!--others-->
    <div class="More row">
        <div class="more_card btn btn-primary card mt-auto mb-auto ml-auto mr-auto">
          <div class="card-body">
            <h1>Exams</h1>
            <a href="#"></a>
          </div>
        </div>
        <div class="more_card btn btn-primary card mt-auto mb-auto ml-auto mr-auto">

          <div class="card-body">
            <h1 class="class-title">Progress</h1>
            <a href="#"></a>
          </div>
        </div>
        <div class="more_card btn card mt-auto mb-auto ml-auto mr-auto">
          <div class="card-body">
            <h1>Performance</h1>
            <a href="#"></a>
          </div>
        </div>
    </div>



  </body>
</html>
